<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.PDFReaderController" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="PDF Reader" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="pdfPathField" promptText="PDF Path" />
    <HBox spacing="10">
        <Button text="Choose File" onAction="#handleChooseFile" />
        <Button text="Open PDF" onAction="#handleReadPDF" />
    </HBox>
</VBox>
