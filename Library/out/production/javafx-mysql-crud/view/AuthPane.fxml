<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AuthController" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Library Management System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
    <HBox spacing="10">
        <Button text="Login" onAction="#handleLogin" />
        <Button text="Register" onAction="#handleRegister" />
    </HBox>
</VBox>
